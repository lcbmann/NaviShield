{
  "manifest_version": 3,
  "name": "PhishSpotter",
  "version": "1.0",
  "description": "Quickly check if a URL is phishing or safe using AI-based detection and Google Safe Browsing.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://phishspotter.onrender.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "result_details.html",
        "result_details.js",
        "style.css",
        "icon16.png",
        "icon48.png",
        "icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
